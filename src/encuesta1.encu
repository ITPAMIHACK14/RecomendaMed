encuesta familiar {
	titulo = "Encuesta de datos familiares"
	bloque principal {
		titulo = "Datos personales del encuestado"
		pregunta nombre {
			tipo = texto { max = 20 }
			descripcion = "Nombre"
			obligatoria
		}
		pregunta fechaNac {
			tipo = texto { max = 20 }
			descripcion = "Apellido"
			obligatoria
		}
//		pregunta cantHijos {
//			tipo = numerico
//			rango = (0,)
//		}
	}
	bloque pareja {
		visible si { principal.estadoCivil = casado }
		titulo = "Datos del conyuge"
	}	
}